{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "types": [
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@pinia/nuxt",
      "@nuxt/schema",
      "@vue/runtime-core"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#app": ["./.nuxt/types/app.d.ts"],
    },
    "skipLibCheck": true
  },
  "extends": "./.nuxt/tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}